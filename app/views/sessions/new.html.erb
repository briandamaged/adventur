<h1>Log in</h1>

<p id="alert"><%= alert %></p>

<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag      :username %><br />
    <%= text_field_tag :username, params[:username] %>
  </div>
  
  <div class="field">
    <%= label_tag            :password %><br />
    <%= password_field_tag   :password %>
  </div>
  
  <div class="field">
    <%= submit_tag "Log in" %>
  </div>
<% end %>


