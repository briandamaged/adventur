<!DOCTYPE html>
<html>
<head>
  <title>Adventur</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>


<header>
  <nav id="account" >
    <% if logged_in? %>
      Hello <%= current_user.username %>.  (<%= link_to "Log out", log_out_path %>)
    <% else %>
      <%= link_to "Sign up", sign_up_path %> or <%= link_to "log in", log_in_path %>
    <% end %>
  </nav>

  <nav id="site" >
    <ul>
      <% if logged_in? %>
        <li><%= link_to "Profile", profile_path %></li>
        <li><%= link_to "Items", items_path %></li>
        <li><%= link_to "Scenes", scenes_path %></li>
      <% else %>
        <li><%= link_to "Welcome", welcome_path %></li>
      <% end %>
    </ul>
  </nav>

  
</header>

<div id="content" >
  <%= yield %>
</div>

</body>
</html>
